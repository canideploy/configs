{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "neverConnectToCloud": true,
  "cli": {
    "packageManager": "pnpm"
  },
  "sync": {
    "applyChanges": true
  },
  "tui": {
    "enabled": true,
    "autoExit": true
  },
  "namedInputs": {
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.mjs",
      "!{projectRoot}/**/?(*.)+test.[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.test.json"
    ]
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/vitest",
      "options": {
        "testTargetName": "test",
        "ciTargetName": "test-ci",
        "testMode": "watch"
      }
    }
  ],
  "release": {
    "version": {
      "conventionalCommits": true,
      "adjustSemverBumpsForZeroMajorVersion": true,
      "preVersionCommand": "nx affected -t build --base=$NX_BASE --head=$NX_HEAD",
      "versionActionsOptions": {
        "skipLockFileUpdate": true
      }
    },
    "conventionalCommits": {
      "types": {
        "deps": {
          "semverBump": "minor",
          "changelog": {
            "title": "Dependency Updates"
          }
        },
        "deps-dev": {
          "semverBump": "none",
          "changelog": {
            "title": "Dev Dependency Updates"
          }
        },
        "build": {
          "semverBump": "none",
          "changelog": {
            "title": "Build System"
          }
        },
        "ci": {
          "semverBump": "none",
          "changelog": {
            "title": "Continuous Integration"
          }
        },
        "chore": {
          "semverBump": "none",
          "changelog": {
            "title": "Miscellaneous Chores"
          }
        },
        "docs": {
          "semverBump": "patch",
          "changelog": {
            "title": "Documentation Updates"
          }
        },
        "feat": {
          "semverBump": "minor",
          "changelog": {
            "title": "New Features"
          }
        },
        "fix": {
          "semverBump": "patch",
          "changelog": {
            "title": "Fixes"
          }
        },
        "perf": {
          "semverBump": "patch",
          "changelog": {
            "title": "Performance Improvements"
          }
        },
        "refactor": {
          "semverBump": "patch",
          "changelog": {
            "title": "Refactoring"
          }
        },
        "revert": {
          "semverBump": "none",
          "changelog": {
            "title": "Reverts"
          }
        },
        "style": {
          "semverBump": "none",
          "changelog": {
            "title": "Coding Style Changes"
          }
        },
        "test": {
          "semverBump": "none",
          "changelog": {
            "title": "Tests"
          }
        }
      }
    },
    "git": {
      "commit": true,
      "tag": true
    },
    "projects": ["packages/*"],
    "releaseTag": {
      "pattern": "{projectName}/v{version}"
    },
    "projectsRelationship": "independent",
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": {
        "file": false,
        "createRelease": "github"
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    }
  }
}
